<!-- Search -->
<div class="widget">
  <h5 class="widget-title"><span>Search</span></h5>
  <form action="/logbook-hugo/search" class="widget-search">
    <input
      id="search-query"
      name="s"
      type="search"
      placeholder="Type &amp; Hit Enter..."
    />
    <button type="submit"><i class="ti-search"></i></button>
  </form>
</div>
<!-- categories -->
<div class="widget">
  <h5 class="widget-title"><span>Categories</span></h5>
  <ul class="list-unstyled widget-list">
    <% categories.forEach(category => { %>
    <li>
      <a href="/?category=<%= category.name.replace(" " ,"+") %>" class="d-flex"
        ><%=category.name%> <small class="ml-auto">(1)</small></a
      >
    </li>
    <% }) %>
  </ul>
</div>
<!-- tags -->
<div class="widget">
  <h5 class="widget-title"><span>Tags</span></h5>
  <ul class="list-inline widget-list-inline">
    <% tags.forEach(tag => { %>
    <li class="list-inline-item"><a href="/?tag=<%= tag.name.replace(" " ,"+") %>"><%= tag.name %></a></li>
    <% }) %>
  </ul>
</div>
<!-- latest post -->
<div class="widget">
  <h5 class="widget-title"><span>Latest Article</span></h5>
  <!-- post-item -->
  <ul class="list-unstyled widget-list">
    <% latestArticles.forEach(article => { %>
    <li class="media widget-post align-items-center">
      <a href="/article/<%= article.id %>">
        <img loading="lazy" class="mr-3" src="images/post/post-6.jpg" />
      </a>
      <div class="media-body">
        <h5 class="h6 mb-0">
          <a href="/article/<%= article.id %>"><%= article.title %></a>
        </h5>
        <small>
          <%= new Date(article.createdAt).toLocaleDateString('en-GB')%></small
        >
      </div>
    </li>
    <% }) %>
  </ul>
</div>
